# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google OAuth (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# NextAuth (generate secret: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Admin emails (comma-separated, no spaces)
# If not set, the first user to sign in becomes admin automatically
ADMIN_EMAILS=admin@example.com,manager@example.com

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5435
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=edu_platform
DATABASE_URL=postgresql://postgres:postgres@localhost:5435/edu_platform

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9010
MINIO_CONSOLE_PORT=9011
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=edu-platform
MINIO_USE_SSL=false
