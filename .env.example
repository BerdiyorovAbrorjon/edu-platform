# ──────────────────────────────────────────────
# App
# ──────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# ──────────────────────────────────────────────
# Google OAuth  (https://console.cloud.google.com)
# ──────────────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ──────────────────────────────────────────────
# NextAuth
# Generate secret:  openssl rand -base64 32
# ──────────────────────────────────────────────
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://yourdomain.com

# ──────────────────────────────────────────────
# Admin emails (comma-separated, no spaces)
# If not set, first user to sign in becomes admin
# ──────────────────────────────────────────────
ADMIN_EMAILS=admin@example.com

# ──────────────────────────────────────────────
# PostgreSQL
# ──────────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_DB=edu_platform
DATABASE_URL=postgresql://postgres:change-me-strong-password@postgres:5432/edu_platform

# ──────────────────────────────────────────────
# MinIO
# ──────────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-strong-password
MINIO_BUCKET=edu-platform
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
